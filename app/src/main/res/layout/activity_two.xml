<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acivity_two_bg"
    tools:context=".ActivityTwo">


    <LinearLayout
        android:id="@+id/text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
           style="@style/Text.View"
            android:text="Policy"/>

        <TextView
            style="@style/Text.View"
            android:text="Product Category"/>

        <TextView
            style="@style/Text.View"
            android:text="Origin Country"/>

        <TextView
            style="@style/Text.View"
            android:text="Brand"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        android:text="Policies"
        android:textColor="@color/purple_300"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/getting_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here Is Number"
        android:textSize="35sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/explode"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/explode"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/red"
        android:text="Explode"
        android:textSize="20sp"
        android:paddingVertical="15dp"
        android:layout_marginBottom="60dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
